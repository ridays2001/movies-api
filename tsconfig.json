{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"lib": ["es2020"],
		"module": "commonjs",
		"target": "es2020",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
